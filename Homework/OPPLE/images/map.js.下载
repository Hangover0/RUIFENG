//分类
var cate = new Object();
cate["type"] = new Array('吸顶灯', '吊灯', '餐吊灯', '落地灯', '台灯', '壁灯', '镜前灯/镜子灯', '小夜灯', '氛围灯', '洗墙灯', '风扇灯', '平板灯', '麻将灯'); //小分类
cate["style"] = new Array('简约吸顶灯', '时尚装饰灯', '新亚洲风尚', '西式复古'); //大分类


//设置省份值
var setProAndCityValue = function(val) {
		setTimeout(function() {
			$(".secondaryMenu5").removeClass("expendWith");
			$(".secondaryMenu5").addClass("shrinkWith");
		}, 0)
		setTimeout(function() {
			$(".secondaryMenu4").removeClass("expendWith");
			$(".secondaryMenu4").addClass("shrinkWith");
		}, 0)
		$(".map-city").text(localStorage.getItem("province") + "/" + val);
		localStorage.setItem("city",val);
}
//判断是否设置小类型
var smallTypeIsEmpty = function(){
	var smalltype = $("#hdsmalltype").val(); 
	var small = [];  
	if(smalltype.indexOf(",")!=-1){//多个选项
		small = smalltype.split(",");
	}else if(smalltype!=""){
		small[0] = smalltype;
	} 
	var resultSmallType = [];
	if(small.length>0){
		for(var i=0;i<small.length;i++){
			if(small[i]!=-1){
				resultSmallType[i]=small[i];
			}
		}
	}  
	return resultSmallType;
}


//判断是否设置风格
var styleIsEmpty = function(){
	var smallstyle = $("#hdstyle").val();
	var styles = [];
	if(smallstyle.indexOf(",")!=-1){//多个选项
		styles = smallstyle.split(",");
	}else if(smallstyle!=""){
		styles[0] = smallstyle;
	}  
	var resultStype = [];
	if(styles.length>0){
		for(var i=0;i<styles.length;i++){
			if(styles[i]!=-1){
				resultStype[i]=styles[i];
			}
		}
	} 
	return resultStype; 	
}

//判断是否设置分类
var bigTyleIsEmpty = function(){
	var hdbigtypes = $("#hdbigtype").val();
	var bigTyleIsEmptys = [];
	var bigTyles = []; 
	if(hdbigtypes.indexOf(",")!=-1){//多个选项
		bigTyleIsEmptys = hdbigtypes.split(",");
	}else if(hdbigtypes!=""){
		bigTyleIsEmptys[0] = hdbigtypes;
	} 
	if(bigTyleIsEmptys.length>0){
		for(var i=0;i<bigTyleIsEmptys.length;i++){
			if(bigTyleIsEmptys[i]!=-1){
				bigTyles[i]=bigTyleIsEmptys[i];
			}
		}
	}   
	/*if(smallTypeIsEmpty().length>0 || styleIsEmpty().length>0){
		bigTyles.push("家居灯具");//追加第一个大分类
	} */
	if(smallTypeIsEmpty().length>0){//如果小分类或者风格有一个被选中
		bigTyles.push("家居灯具");//追加第一个大分类
	} 




	return bigTyles; 	
}

var arrayConvertString = function(arrays){ 
	var strings = "";
	for(var i=0;i<arrays.length;i++){ 
		strings+=arrays[i] + ","; 
	}
	strings = strings.substr(0,strings.length-1);
	return strings;
}


//隐藏菜单
var hiddenTypeOrStyle = function() {
	var hdsmalltypes = smallTypeIsEmpty(); //分类
	var hdstyles = styleIsEmpty(); //风格 
	var isSelect = false;//是否选中	 
	
	if(hdsmalltypes.length >0 || hdstyles.length >0) {
		isSelect = true;
	}
	if(isSelect) {
		$(".product-type-big").find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
	}else{
		$(".product-type-big").find("span:last-child").empty();
	}
	 
	setTimeout(function() {
		$(".secondaryMenu2").removeClass("expendWith");
		$(".secondaryMenu2").addClass("shrinkWith");

	}, 0)
	setTimeout(function() {
		$(".secondaryMenu2").removeClass("expendWith");
		$(".secondaryMenu2").addClass("shrinkWith");
		$(".secondaryMenu3").removeClass("expendWith");
		$(".secondaryMenu3").addClass("shrinkWith");
		$(".secondaryMenu").removeClass("expendWith");
		$(".secondaryMenu").addClass("shrinkWith");
	}, 0);
}



//获取产品分类风格点击事件
var setTypeOrStyleValue = function(e, n) {
	var hdsmalltype = $("#hdsmalltype"); //分类
	var hdstyle = $("#hdstyle"); //风格   
	var currentElement = $(e);
	var emptyArra = [];
	var IsSelect = false; //是否被选中 



	if(n == 0) { //获取产品分类点击事件 
		if(hdsmalltype.val().trim().length > 0) { //判断是否选中过 如果是 则取消选中 
			if(hdsmalltype.val().indexOf(",") > 0) { //  有 ',' 为数组遍历数组去找
				emptyArra = hdsmalltype.val().split(",");
				for(var i = 0; i < emptyArra.length; i++) {
					if(emptyArra[i] == currentElement.find("span").eq(0).text()) {
						IsSelect = true;
					}
				}
			} else {
				if(hdsmalltype.val() == currentElement.find("span").eq(0).text()) {
					IsSelect = true;
				}
			}
			if(IsSelect) { //存在已选中,去除勾选 
				currentElement.find("span:last-child").empty();
				if(hdsmalltype.val() == currentElement.find("span").eq(0).text()) { //
					hdsmalltype.val(hdsmalltype.val().replace(hdsmalltype.val(), ""));
				} else {
					//1,2,3,4  2,
					hdsmalltype.val(hdsmalltype.val().replace(currentElement.find("span").eq(0).text(), "-1"));
				}
			} else {
				hdsmalltype.val(hdsmalltype.val() + "," + currentElement.find("span").eq(0).text());
				currentElement.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
			}
		} else {
			hdsmalltype.val(currentElement.find("span").eq(0).text());
			currentElement.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
		}
		GetAll();
	} else{ //获取产品风格点击事件 
		
		if(hdstyle.val().trim().length > 0) { //判断是否选中过 如果是 则取消选中 
			if(hdstyle.val().indexOf(",") > 0) { //  有 ',' 为数组遍历数组去找
				emptyArra = hdstyle.val().split(",");
				for(var i = 0; i < emptyArra.length; i++) {
					if(emptyArra[i] == currentElement.find("span").eq(0).text()) {
						IsSelect = true;
					}
				}
			} else {
				if(hdstyle.val() == currentElement.find("span").eq(0).text()) {
					IsSelect = true;
				}
			}
			if(IsSelect) { //存在已选中,再次点击去除勾选 
				currentElement.find("span:last-child").empty();
				if(hdstyle.val() == currentElement.find("span").eq(0).text()) { //
					hdstyle.val(hdstyle.val().replace(hdstyle.val(), ""));
				} else {
					//1,2,3,4  2,
					hdstyle.val(hdstyle.val().replace(currentElement.find("span").eq(0).text(), "-1"));
				}
			} else {
				hdstyle.val(hdstyle.val() + "," + currentElement.find("span").eq(0).text());
				currentElement.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
			}
		} else {
			hdstyle.val(currentElement.find("span").eq(0).text());
			currentElement.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
		} 
		GetAll();
	} 

}

//根据省份获取城市
var getcity = function(pro) {
	//$(".secondaryMenu5").css({"border-right":"2px solid red"});
	$(".map-city").text("");
	$('.secondaryMenu5 .content .mCustomScrollBox .mCSB_container').empty();
	var html = "";
	for(var i = 0; i < china[pro].length; i++) {
		html = html + " <div class=\"classes1\" onclick=\"setProAndCityValue('" + china[pro][i] + "')\">" + china[pro][i] + "</div>";
	}
	$('.secondaryMenu5 .content .mCustomScrollBox .mCSB_container').append(html);
	$(".secondaryMenu5").removeClass("shrinkWith");
	$(".secondaryMenu5").addClass("expendWith");
	localStorage.setItem("province",pro)
}
$(function() {
	localStorage.removeItem("province");
	localStorage.removeItem("city");
	$(".product-type-big1").click(function() {
		var element = $(this);
		var hdbigtype = $("#hdbigtype");
		var emptyArra = [];
		var IsSelect = false; //是否被选中

		if(hdbigtype.val().trim().length > 0) { //判断是否选中过 如果是 则取消选中 
			if(hdbigtype.val().indexOf(",") > 0) { //  有 ',' 为数组
				emptyArra = hdbigtype.val().split(",");
				for(var i = 0; i < emptyArra.length; i++) {
					if(emptyArra[i] == element.find("span").eq(1).text()) {
						IsSelect = true;
					}
				}
			} else {
				if(hdbigtype.val() == element.find("span").eq(1).text()) {
					IsSelect = true;
				}
			}
			if(IsSelect) { //存在已选中,去除勾选 
				element.find("span:last-child").empty();
				if(hdbigtype.val() == element.find("span").eq(1).text()) { //
					hdbigtype.val(hdbigtype.val().replace(hdbigtype.val(), ""));
				} else {
					//1,2,3,4  2,
					hdbigtype.val(hdbigtype.val().replace(element.find("span").eq(1).text(), "-1"));
				}
			} else {
				hdbigtype.val(hdbigtype.val() + "," + $(this).find("span").eq(1).text());
				element.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
			}
		} else {
			hdbigtype.val(element.find("span").eq(1).text());
			element.find("span:last-child").html("<img src=\"/web/map/home/library/images/checkOn2.png\">");
		}
		//console.log(hdbigtype.val()+"===============");
		GetAll();
	})

	//获取省份
	$(".map-city").click(function() {

		if($('.secondaryMenu4 .mCustomScrollbar .classes1').length < 1) {
			var html = "";
			for(var i in china) {
				html = html + " <div class=\"classes1\" onmouseover=\"getcity('" + i + "')\">" + i + "</div>";
			}
			$('.secondaryMenu4 .content .mCustomScrollBox .mCSB_container').append(html);
		}
		$(".secondaryMenu4").removeClass("shrinkWith");
		$(".secondaryMenu4").addClass("expendWith");
	})

	//点击展开第一个大分类			 
	$(".product-type-big").click(function() {
		$(".secondaryMenu").removeClass("shrinkWith");
		$(".secondaryMenu").addClass("expendWith");
	})
	 
	//产品风格 、分类添加mouseover事件
	var listStyleAndType = $(".secondaryMenu .classes1");
	$.each(listStyleAndType, function(n) {
		$(this).mouseover(function() {
			//$(".secondaryMenu2").css({"border-right":"none"});
			if(n == 0) { //产品分类 
				var small = smallTypeIsEmpty();//获取分类数目数组 
				var html = "";   
				if(small.length < 1){//第一次加载
					for(var i = 0; i < cate.type.length; i++) {
					   html = html + "<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span></span></div>";
					}
				}else{ 
					var emptyCount = 0;
					for(var j=0;j<small.length;j++){ 
						if(small[j] == -1){ 
							emptyCount++;
						} 
					} 
					
					if(emptyCount == small.length){//全部为空 
						for(var i = 0; i < cate.type.length; i++) {
						   html = html + "<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span></span></div>";
						}
					}else{
						for(var i = 0; i < cate.type.length; i++) {
							for(var j=0;j<small.length;j++){
								if(small[j]!=-1){//排除空循环   
									//吸顶灯,吊灯
									if(cate.type[i] == small[j]){
										if(html.indexOf(cate.type[i])<0){//不存在
								    		html+="<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span><img src=\"/web/map/home/library/images/checkOn2.png\"></span></div>";
								    	}else{//存在就用打钩替换不打钩
								    		html = html.replace("<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span></span></div>","<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span><img src=\"/web/map/home/library/images/checkOn2.png\"></span></div>");
								    	}
									}else{
										if(html.indexOf(cate.type[i])<0){//不存在
						    				html+="<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,0)\"><span>" + cate.type[i] + "</span><span></span></div>";
						    			}
									}
								}
							}
						}
					}
				}
				
				html = html + "<input tyle=\"button\" class=\"submitBtn2\" style=\"margin-bottom:10px;border:0;cursor:pointer;\" onclick=\"hiddenTypeOrStyle()\" value=\"确定\" />";
				$(".secondaryMenu2  .content .mCustomScrollBox .mCSB_container").empty();
				$(".secondaryMenu2  .content .mCustomScrollBox .mCSB_container").append(html);		
 
				$(".secondaryMenu2").removeClass("shrinkWith");
				$(".secondaryMenu2").addClass("expendWith");
				//$(".secondaryMenu2").css({"border-right":"2px solid red"});

			} else if(n == 1) { //风格 
				var hdstyles = $("#hdstyle").val();
				var styles = [];
				if(hdstyles.indexOf(",")!=-1){//多个选项
					styles = hdstyles.split(",");
				}else{
					styles = hdstyles;
				}  
				var html = "";  
				if(styles.length < 1){//第一次加载
					for(var i = 0; i < cate.style.length; i++) {
					   html = html + "<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span></span></div>";
					}
				}else{   
					var emptyCount = 0;
					for(var j=0;j<styles.length;j++){ 
						if(styles[j] == -1){ 
							emptyCount++;
						} 
					}  
					if(emptyCount == styles.length){//全部为空 
						for(var i = 0; i < cate.style.length; i++) {
						   html = html + "<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span></span></div>";
						}
					}else{ 
						//console.log(styles);
						for(var i = 0; i < cate.style.length; i++) { 
							for(var j=0;j<styles.length;j++){ 
								if(styles[j]!=-1){//排除空循环   
							 		if(cate.style[i] == styles[j]){
										if(html.indexOf(cate.style[i])<0){//不存在
								    		html+="<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span><img src=\"/web/map/home/library/images/checkOn2.png\"></span></div>";
								    	}else{//存在就用打钩替换不打钩
								    		html = html.replace("<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span></span></div>","<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span><img src=\"/web/map/home/library/images/checkOn2.png\"></span></div>");
								    	}
									}else{
										if(html.indexOf(cate.style[i])<0){//不存在
						    				html+="<div class=\"classes1\" onclick=\"setTypeOrStyleValue(this,1)\"><span>" + cate.style[i] + "</span><span></span></div>";
						    			}
									} 
								}
							}
						}
					}
				}  
				html = html + "<input tyle=\"button\" class=\"submitBtn2\" style=\"margin-bottom:10px;border:0;cursor:pointer;\" onclick=\"hiddenTypeOrStyle()\" value=\"确定\" />";			
				$(".secondaryMenu2  .content .mCustomScrollBox .mCSB_container").empty();
				$(".secondaryMenu2  .content .mCustomScrollBox .mCSB_container").append(html);
				$(".secondaryMenu2").removeClass("shrinkWith");
				$(".secondaryMenu2").addClass("expendWith");
				//$(".secondaryMenu2").css({"border-right":"2px solid red"});
			}
		})
	});

})